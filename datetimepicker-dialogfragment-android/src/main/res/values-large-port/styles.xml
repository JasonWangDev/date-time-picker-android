<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 日期選取器樣式 -->
    <style name="DateTimePickerDialogFragment.DatePicker" parent="DateTimePickerDialogFragment.Picker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_marginRight">@dimen/DateTimePickerDialogFragment.TimePicker.Margin</item>
        <item name="android:layout_marginEnd">@dimen/DateTimePickerDialogFragment.TimePicker.Margin</item>
        <item name="android:layout_marginLeft">@dimen/DateTimePickerDialogFragment.DatePicker.Margin</item>
        <item name="android:layout_marginStart">@dimen/DateTimePickerDialogFragment.DatePicker.Margin</item>
    </style>

    <!-- 時間選取器樣式 -->
    <style name="DateTimePickerDialogFragment.TimePicker" parent="DateTimePickerDialogFragment.Picker">
        <item name="android:layout_marginRight">@dimen/DateTimePickerDialogFragment.TimePicker.Margin</item>
        <item name="android:layout_marginEnd">@dimen/DateTimePickerDialogFragment.TimePicker.Margin</item>
        <item name="android:layout_marginLeft">@dimen/DateTimePickerDialogFragment.DatePicker.Margin</item>
        <item name="android:layout_marginStart">@dimen/DateTimePickerDialogFragment.DatePicker.Margin</item>
    </style>

</resources>